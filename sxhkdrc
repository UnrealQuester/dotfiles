super + Return
    uxterm

~button1
    bspc pointer -g focus
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}
super + !button{1-3}
    bspc pointer -t %i %i
super + @button{1-3}
    bspc pointer -u

super + shift + r
    pkill -USR1 -x sxhkd

# close window
super + c
    bspc window -c

super + space
    dmenuwrapper

super + ctrl + {1-9}
    bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

super + {_,shift + }{q,w,e}
    bspc {desktop -f,window -d} ^{4,5,6}

super + s
    i3lock -i ~/wallpapers/wallpaper.png -t

super + shift + q
    bspc quit

super + {_, shift +} Tab
    bspc window -f {prev,next}

super + f
    bspc window -t fullscreen

super + Print
    gnome-screenshot --interactive
