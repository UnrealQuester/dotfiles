super + Return
    uxterm

~button1
    bspc pointer -g focus
super + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}
super + @button{1-3}
    bspc pointer -u

super + shift + r
    pkill -USR1 -x sxhkd

# close window
super + c
    bspc node -c

super + space
    dmenuwrapper

super + ctrl + {1-9}
    bspc node -r 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {desktop -f,node -d} ^{1-9,10}

super + {_,shift + }{q,w,e}
    bspc {desktop -f,node -d} ^{4,5,6}

super + s
    i3lock -i ~/wallpapers/wallpaper.png -t

super + shift + x
    bspc quit

super + {_, shift +} Tab
    bspc node -f {prev,next}

super + {_,shift + }{h,j,k,l}
    bspc node -{f,s} {left,down,up,right}

super + ctrl + {h,j,k,l}
    bspc node -p {left,down,up,right}

super + r
    bspc desktop --rotate 90

super + f
    bspc node -t "~fullscreen"

super + Print
    gnome-screenshot --interactive
